<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemSanPhamAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C0F3ED">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm sản phẩm"
                android:textSize="22dp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginLeft="70dp"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Thông tin sản phẩm"
               android:textSize="18dp"
               android:fontFamily="serif"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="15dp"
               />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_bg_themsp"
                android:padding="10dp">

                <EditText
                    android:id="@+id/edtThemTenSp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_editttext_themsp"
                    android:padding="15dp"
                    android:hint="Nhập tên sản phẩm"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_marginTop="10dp"/>
                <EditText
                    android:id="@+id/edtThemGiaSp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_editttext_themsp"
                    android:padding="15dp"
                    android:hint="Nhập giá sản phẩm"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin sản phẩm"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_bg_themsp"
                android:padding="10dp"
                android:layout_marginTop="10dp">


                <EditText
                    android:id="@+id/edtNhaCungCap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_editttext_themsp"
                    android:padding="15dp"
                    android:hint="Nhà cung cấp"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_marginTop="10dp"/>

                <Spinner
                    android:id="@+id/spnCategoryThemSp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_editttext_themsp" />


                <EditText
                    android:id="@+id/edtMoTa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_editttext_themsp"
                    android:padding="15dp"
                    android:hint="Nhập mô tả sản phẩm"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:layout_marginTop="10dp"
                    />

                <Button
                    android:id="@+id/btnThemSp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#00EEEE"
                    android:fontFamily="serif"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Hoàn thành"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>

            <ImageView
                    android:id="@+id/imgThemSp"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_img_admin"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/img_camera_admin"/>
                <TextView
                    android:id="@+id/captireTXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="capture_imge_here_of_browse"
                    android:fontFamily="serif"
                    android:layout_gravity="center"/>


        </LinearLayout>
    </LinearLayout>



</androidx.core.widget.NestedScrollView>